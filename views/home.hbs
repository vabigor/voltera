    <div class="line-4"></div>
    <div class="container pt-2 pb-3" id="commentBlock">
        <div class="row">
            <div class="col">
                <h2 class="home-description color-gary">ОТЗЫВЫ</h2>
            </div>
            <div class="col text-align-right">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Оставить отзыв</button>
            </div>
        </div>
    </div>
    <div class="container pb-3">
        <div>
            <div id="allComment">
                {{#each comments}}
                    <div class="card mb-2">
                        <div class="row g-0">
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">{{this.dataValues.full}}</h5>
                                    <p class="card-text">{{this.dataValues.text}}</p>
                                    <p class="card-text"><small class="text-muted">{{this.dataValues.updatedAt}}</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
            <div id="selfComment">

            </div>
            <div class="text-justify-center">
                <nav class="mt-3">
                    <ul class="pagination">
                        {{#times countPage}}
                            {{#ifCond this 0}}
                                <li class="page-item" aria-current="page"><button class="page-link active" onclick="getComments(this, 0)">1</button></li>
                            {{else}}
                                <li class="page-item"><button class="page-link" onclick="getComments(this, {{this}})">{{#inc this}}{{/inc}}</button></li>
                            {{/ifCond}}
                        {{/times}}
                    </ul>
                </nav>
            </div>
        </div>
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" tabindex="-1" aria-labelledby="staticBackdropLabel" data-bs-backdrop="static" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div id="modalTitle">
                    <p class="modal-title fs-5 font-weight-6" id="staticBackdropLabel">Ваш отзыв</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="modalContent" class="modal-body">
                <label class="form-label color-gary"  for="commentName">Ваше имя:<span class="color-red"> *</span></label>
                <input type="text" class="form-control" id="commentName">
                <label class="form-label color-gary" for="commentPost">Должность:</label>
                <input type="text" class="form-control" id="commentPost">
                <label class="form-label color-gary" for="commentCompany">Компания</label>
                <input type="text" class="form-control" id="commentCompany">
                <label class="form-label color-gary" for="comment">Отзыв:<span class="color-red"> *</span></label>
                <textarea id="comment" rows="5" class="form-control" aria-label="With textarea"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-success" data-bs-dismiss="modal" onclick="sendComment()">Отправить</button>
            </div>
        </div>
    </div>
</div>





